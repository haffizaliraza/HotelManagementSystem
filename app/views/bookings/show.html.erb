<div id="page-wrapper">
  <div id = "inner-wrapper">

  <div class = "Jumbotron" style = "text-align:center; color:#A70303;">
    <h1> BNB HOTEL</h1>
    <a>Shop # 12 , Ibrahim Center Shah Alam Bazar Lahore, 0333-4256375 , www.aliyas.com.pk</a>
  </div>
  <hr>
  <hr>
  <div>
    <table class="table table-striped table-bordered table-hover ">
      
      <thead>
        <tr>
          <td> </td>
          <td style = "text-align:right; ">
          <a>Date: <%= Time.now().strftime("%d %B %Y")%></a>
          </td>
        </tr>
      </thead>

      <tbody>
        <tr>
          <td>Name</td>
          <td style = "font-variant-caps:small-caps;  font-weight:bolder; "><%= @booking.name %></td>
        </tr>

        <tr>
          <td>Cell Number</td>
          <td style = "font-variant-caps:small-caps;  font-weight:bolder; "><%= @booking.phone %></td>
        </tr>

        <tr>
          <td>Shop Name</td>
          <td style = "font-variant-caps:small-caps;  font-weight:bolder; "><%= @booking.cnic %></td>
        </tr>
        
        <tr>
          <td>Address</td>
          <td style = "font-variant-caps:small-caps;  font-weight:bolder; " ><%= @booking.address%></td>
        </tr>
      </tbody>
    </table>
  </div>
    <hr>    
    <hr>

    <div class = "row">
       
       <div class = "cl-lg-5">
         
         <table class="table table-striped table-bordered table-hover ">

             <thead>
               <tr>
                 <th>Room No</th>
                 <th>Check In</th>
                 <th>Check Out</th>
                 <th>Rate</th>
               </tr>
             </thead>

             <tbody>
           <% @booking.room_bokings.each do |r_b|  %>
                <tr >
                  <td><%= r_b.room.room_no %></td>
                  <td><%= r_b.booking.check_in.strftime("%d %B %Y") if r_b.booking.check_in %></td>
                  <td><%= r_b.booking.check_out.strftime("%d %B %Y") if r_b.booking.check_out %></td>
                  <td><%= r_b.charges %></td>
                 </tr>
                 <% end %>
          
          
             </tbody>
               
         </table>

       </div>

       <hr />
    <div class="row">

    <div class="col-md-4 col-sm-6 col-xs-6" style = "background-color:#FAB418; ">           
        <div class="panel panel-back noti-box" style = "background-color:#FAB418; ">       
          <div class="text-box" style = "color:white; text-align:center; ">
           <h3>Bill</h3>
            <h2 class="main-text"> <%= @booking.bill %></h2> 
          </div>
        </div>
      </div>

      

      <div class="col-md-4 col-sm-6 col-xs-6" style = "background-color:#1BBDD2; ">           
        <div class="panel panel-back noti-box" style = "background-color:#1BBDD2; "> 
            <div class="text-box" style = "text-align:center; color:white; ">
              <h3>Other Charges </h3>
              <h2 class="main-text"><%= @booking.other_charges%></h2>
             </div>
          </div>
      </div>



      <div class="col-md-4 col-sm-6 col-xs-6" style = "background-color:black; ">           
        <div class="panel panel-back noti-box" style = "background-color:black;  ">
                
            <div class="text-box" style = "color:white; text-align:center; " >
                <h3> Total Bill </h3>
                <h2 class="main-text"><%= @booking.total %></h2>   
            </div>
        </div>
      </div>

      
    </div>

     <hr>


    </div>

  </div>
</div>

